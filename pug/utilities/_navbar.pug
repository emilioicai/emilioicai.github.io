mixin navbar-mixin(style, button_color)
	nav.py-3(class='navbar navbar-expand-lg fixed-top auto-hiding-navbar ' + style)
		.container
			a.navbar-brand.py-0(href='/index.html', target='_blank')
				span
			button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar-content', aria-controls='navbar-content', aria-expanded='false', aria-label='Toggle navigation')
				span.navbar-toggler-icon
			#navbar-content.collapse.navbar-collapse
				ul.navbar-nav.ml-auto
					li.nav-item.mx-1
						a.nav-link(href='/index.html')
							| Home
					li.nav-item.mx-1.dropdown
						a.nav-link.dropdown-toggle#demos-dropdown(href='#', role='button', data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
							| Demos
						.dropdown-menu.animated_dropdown.shadow-lg(aria-labelledby='demos-dropdown')
							a.dropdown-item(href='/demo/demo-basic.html') Basic
							a.dropdown-item(href='/demo/demo-startup1.html') Startup 1
							a.dropdown-item(href='/demo/demo-startup2.html') Startup 2
							a.dropdown-item(href='/demo/demo-startup3.html') Startup 3
							a.dropdown-item(href='/demo/demo-saas1.html') SaaS 1
							a.dropdown-item(href='/demo/demo-saas2.html') SaaS 2
							a.dropdown-item(href='/demo/demo-mobile.html') Mobile
							a.dropdown-item(href='/demo/demo-meetup.html') Meetup
					li.nav-item.mx-1.dropdown
						a.nav-link.dropdown-toggle#pages-dropdown(href='#', role='button', data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
							| Pages
						.dropdown-menu.animated_dropdown.shadow-lg(aria-labelledby='pages-dropdown')
							a.dropdown-item(href='/pages/page-about.html') About
							a.dropdown-item(href='/pages/page-pricing.html') Pricing 1
							a.dropdown-item(href='/pages/page-pricing2.html') Pricing 2
							a.dropdown-item(href='/pages/page-contact-us.html') Contact us
							a.dropdown-item(href='/pages/page-faq.html') FAQ
							a.dropdown-item(href='/pages/page-login.html') Login & Register 1
							a.dropdown-item(href='/pages/page-login2.html') Login & Register 2
							a.dropdown-item(href='/pages/page-password-recovery.html') Password recovery
							a.dropdown-item(href='/pages/page-404.html') 404 error
							a.dropdown-item(href='/pages/page-privacy.html') Privacy & terms
							a.dropdown-item(href='/pages/page-careers.html') Careers
							a.dropdown-item(href='/pages/page-careers-single.html') Careers page
							a.dropdown-item(href='/pages/page-apply.html') Apply form
					li.nav-item.mx-1.dropdown
						a.nav-link.dropdown-toggle#blog-dropdown(href='#', role='button', data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
							| Blog
						.dropdown-menu.animated_dropdown.shadow-lg(aria-labelledby='blog-dropdown')
							a.dropdown-item(href='/blog/blog-sidebar.html') Blog 1
							a.dropdown-item(href='/blog/blog-sidebar-article.html') Blog article 1
							a.dropdown-item(href='/blog/blog-fullwidth.html') Blog 2
							a.dropdown-item(href='/blog/blog-fullwidth-article.html') Blog article 2
					li.nav-item.ml-1.mr-3.dropdown
						a.nav-link.dropdown-toggle#docs-dropdown(href='#', role='button', data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
							| Docs
						.dropdown-menu.animated_dropdown.shadow-lg(aria-labelledby='docs-dropdown')
							a.dropdown-item(href='/docs/getting_started/docs-introduction.html') Getting started
							a.dropdown-item(href='/docs/getting_started/docs-changelog.html') Changelog
							a.dropdown-item(href='/docs/getting_started/docs-support.html') Support
							a.dropdown-item(href='/docs/graphics/docs-icons.html') Icons
					li.nav-item.mx-2.pt-1
						a#buy-button(href='https://themes.getbootstrap.com/product/replacer-2/', class='rounded-pill px-3 btn btn-sm ' + button_color)
							| Buy
					li.nav-item.mx-1
						button.nav-link.btn.btn-link(type="button" data-toggle="modal" data-target="#login-modal")
							i.far.fa-user.mr-2
							| Login
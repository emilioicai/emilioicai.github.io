doctype html
html(lang="en")
	head
		include /utilities/_head.pug
	body


		// HEADER
		#header
			include /utilities/_navbar.pug
			+navbar-mixin('navbar-light', 'btn-secondary')
			#breadcrumbs.container
				.row
					.col
						hr.mt-10
						include /utilities/_breadcrumb.pug
						+breadcrumb-mixin('text-muted', ['Home', 'Pages', 'Contact Us'])
			#title.container
				.row
					.col.text-center.pt-8.pb-6
						h1.display-2.mb-3 
							| Contact us
						p.lead.text-muted.mb-3
							a(href='mailto:hello@getreplacer.com')
								| hello@getreplacer.com
		

		// FORM	
		#form.container
			.row
				.col-lg-8.col-md-10.col-sm-12.mx-auto
					form.mb-5
						.form-row 
							.form-group.col-lg-4.col-md-12.col-sm-12.pr-2
								label.text-muted(for='forms-3-first-name')
									small
										| First name
								input#forms-3-first-name.form-control.rounded(type='text', placeholder='Jon')
							.form-group.col-lg-4.col-md-12.col-sm-12.px-2
								label.text-muted(for='forms-3-last-name')
									small
										| Last name
								input#forms-3-org.form-control.rounded(type='text', placeholder='Snow')
							.form-group.col-lg-4.col-md-12.col-sm-12.pl-2
								label.text-muted(for='forms-3-org')
									small
										| Organization
								input#forms-3-last-name.form-control.rounded(type='text', placeholder='Acme')
						.form-group.mb-5
							label.text-muted.small(for='exampleFormControlTextarea1') Message
							textarea#exampleFormControlTextarea1.form-control.rounded(rows='6', placeholder="Your comment")
						button.btn.btn-primary.mb-3.w-100(type='submit')
							| Write to us
						p.mt-2.mb-4.mb-0.small.text-muted.text-center
							i.fas.fa-check-circle.mr-2
							span Your personal data is safe with us 


		// CONTACTS
		#contacts.pt-7.pb-8
			.container
				.row.py-5
					.col-lg-4.col-md-12.mb-4.text-center
						.icon.bg-secondary-light.rounded-lg.mb-4.p-2
							img(alt='Icon' src='/images/icons/secondary/support.svg', height='48')
						h5.mb-2 Help & support
						p.mx-5.lead.mb-0 We’re here to help with any&nbsp;questions or issues:
						a.lead.text-primary(href='mailto:hello@getreplacer.com')
							| hello@support.com
					.col-lg-4.col-md-12.mb-4.text-center
						.icon.bg-secondary-light.rounded-lg.mb-4.p-2
							img(alt='Icon' src='/images/icons/secondary/location.svg', height='48')
						h5.mb-2 Our location
						p.mx-5.lead.mb-0 778 Folsom Avenue, Suite 12, San&nbsp;Francisco, CA&nbsp;54107
						a.lead.text-primary(href='mailto:hello@getreplacer.com')
							| Show&nbsp;on&nbsp;map
					.col-lg-4.col-md-12.mb-4.text-center
						.icon.bg-secondary-light.rounded-lg.mb-4.p-2
							img(alt='Icon' src='/images/icons/secondary/dollar.svg', height='48')
						h5.mb-2 Sales department
						p.mx-5.lead.mb-0 We’d love to discuss how we&nbsp;can&nbsp;save you money:
						a.lead.text-primary(href='mailto:hello@getreplacer.com')
							| sales@support.com


		// FOOTER
		include /utilities/_footer.pug
		// light-footer(lead_bg_color, lead_border_color, lead_text_color, lead_btn_color, footer_bg, title_bg, text_color, link_color, subscribe_bg, subscribe_button, logo_file)
		+light-footer('bg-white', '', '', 'btn-secondary', 'bg-light', 'text-dark', 'text-muted', 'text-muted', '', 'btn-gray', '/images/logo-mono-green.svg')

		include /utilities/_scripts.pug